<Window x:Class="RdpIo.UI.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="rdp-io - Передача"
        Width="450" Height="220"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        WindowStartupLocation="CenterScreen">

    <Border Background="#34495E"
            BorderBrush="#27AE60"
            BorderThickness="3"
            CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Передача текста..."
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,15"/>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="1"
                         Height="25"
                         Value="{Binding PercentageComplete}"
                         Maximum="100"
                         Margin="0,0,0,10">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Foreground" Value="#27AE60"/>
                        <Setter Property="Background" Value="#2C3E50"/>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>

            <!-- Статистика -->
            <TextBlock Grid.Row="2"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,0,0,5">
                <Run Text="Передано: "/>
                <Run Text="{Binding CurrentPosition}" FontWeight="Bold"/>
                <Run Text=" / "/>
                <Run Text="{Binding TotalCharacters}" FontWeight="Bold"/>
                <Run Text=" символов ("/>
                <Run Text="{Binding PercentageComplete, StringFormat={}{0:F1}%}" FontWeight="Bold"/>
                <Run Text=")"/>
            </TextBlock>

            <!-- Оставшееся время -->
            <TextBlock Grid.Row="3"
                       Foreground="#BDC3C7"
                       FontSize="12"
                       Margin="0,0,0,10">
                <Run Text="Осталось: "/>
                <Run Text="{Binding EstimatedTimeRemaining}" FontWeight="Bold"/>
            </TextBlock>

            <!-- Кнопка отмены -->
            <Button Grid.Row="4"
                    Content="Отмена (Esc)"
                    Width="120"
                    Height="35"
                    Command="{Binding CancelCommand}"
                    Background="#E74C3C"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>


