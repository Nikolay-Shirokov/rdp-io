<Window x:Class="RdpIo.UI.Windows.OcrResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="rdp-io - Результаты OCR"
        Width="600" Height="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        MinWidth="400" MinHeight="300">

    <Border Background="#34495E"
            BorderBrush="#27AE60"
            BorderThickness="3"
            CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                       Text="Результаты распознавания текста"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,15"
                       Cursor="SizeAll"
                       MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

            <!-- Распознанный текст -->
            <Border Grid.Row="1"
                    Background="#2C3E50"
                    BorderBrush="#27AE60"
                    BorderThickness="2"
                    CornerRadius="5"
                    Margin="0,0,0,15">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Margin="10">
                    <TextBox Text="{Binding RecognizedText, Mode=TwoWay}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             FontSize="13"
                             FontFamily="Consolas"
                             IsReadOnly="False"
                             VerticalAlignment="Stretch"/>
                </ScrollViewer>
            </Border>

            <!-- Статистика -->
            <Border Grid.Row="2"
                    Background="#2C3E50"
                    BorderBrush="#27AE60"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="10,5"
                    Margin="0,0,0,15">
                <TextBlock Text="{Binding Statistics}"
                           FontSize="11"
                           Foreground="#BDC3C7"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Кнопки действий -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Пустое место слева -->
                <Border Grid.Column="0"/>

                <!-- Кнопка "Копировать" -->
                <Button Grid.Column="1"
                        Content="Копировать"
                        Command="{Binding CopyToClipboardCommand}"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка "Отправить в RDP" -->
                <Button Grid.Column="2"
                        Content="Отправить в RDP"
                        Command="{Binding SendToRdpCommand}"
                        Width="150"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка "Закрыть" -->
                <Button Grid.Column="3"
                        Content="Закрыть"
                        Command="{Binding CloseCommand}"
                        Width="100"
                        Height="35"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
